<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="#30271B"
            app:tabIndicatorColor="#60770606"
            app:tabIndicatorGravity="stretch"
            app:tabIndicatorHeight="4dp"
            app:tabSelectedTextColor="#FFFFFF"
            app:tabTextColor="#F8E8E8">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/number_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main\nCharacters" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/color_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Negative\nRole" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/reltives_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERIES" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/phrases_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dialogue" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9">

        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>


//fb  ads
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</RelativeLayout>